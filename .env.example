# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Repository Configuration
REPO_CLONE_PATH=./repos

# GitHub Webhook Configuration
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# NVD API Configuration (Optional)
NVD_API_KEY=

# LLM Configuration
# Primary LLM Provider: ollama, anthropic, or openai
LLM_PRIMARY_PROVIDER=ollama
LLM_PRIMARY_TEMPERATURE=0.2

# Primary LLM - Ollama Configuration
LLM_PRIMARY_OLLAMA_BASE_URL=http://localhost:11434
LLM_PRIMARY_OLLAMA_MODEL=deepseek-coder:6.7b

# Primary LLM - Anthropic Configuration (if using Claude)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-4-sonnet-20250514
ANTHROPIC_TEMPERATURE=0.2

# Primary LLM - OpenAI Configuration (if using GPT-4)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.2

# Secondary LLM Provider: ollama, anthropic, or openai
LLM_SECONDARY_PROVIDER=ollama
LLM_SECONDARY_TEMPERATURE=0.3

# Secondary LLM - Ollama Configuration
LLM_SECONDARY_OLLAMA_BASE_URL=http://localhost:11434
LLM_SECONDARY_OLLAMA_MODEL=deepseek-coder:6.7b

# Secondary LLM - Anthropic Configuration
LLM_SECONDARY_ANTHROPIC_MODEL=claude-4-sonnet-20250514

# Secondary LLM - OpenAI Configuration
LLM_SECONDARY_OPENAI_MODEL=gpt-4-turbo-preview

# Legacy Ollama Configuration (for backward compatibility)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-coder:6.7b
OLLAMA_TEMPERATURE=0.3
